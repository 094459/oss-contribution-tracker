{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es2017",
      "es2016",
      "es2015"
    ],
    "sourceMap": true,
    "outDir": "../build/browser",
    "jsx": "react",
    "noImplicitAny": false,
    "noUnusedLocals": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx", "config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}